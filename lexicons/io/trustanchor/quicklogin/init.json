{
  "lexicon": 1,
  "id": "io.trustanchor.quicklogin.init",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Initialize QuickLogin session",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "properties": {
            "allowCreate": {
              "type": "boolean",
              "description": "Allow automatic account creation if JID not found"
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "sessionId",
            "sessionToken",
            "expiresAt",
            "qrCodeUrl"
          ],
          "properties": {
            "sessionId": {
              "type": "string",
              "description": "Unique session identifier"
            },
            "sessionToken": {
              "type": "string",
              "description": "Secret token for polling status"
            },
            "expiresAt": {
              "type": "string",
              "format": "datetime",
              "description": "When this session expires"
            },
            "qrCodeUrl": {
              "type": "string",
              "format": "uri",
              "description": "QR code image URL for display"
            }
          }
        }
      }
    }
  }
}
